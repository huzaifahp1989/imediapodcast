<section>
  <h2><%= stream.title %></h2>
  <div class="sub"><%= stream.kind %> â€¢ <%= new Date(stream.created_at).toLocaleString() %></div>
  <% if (stream.kind==='youtube') { %>
    <div class="media" style="position:relative;padding-bottom:56.25%;height:0;overflow:hidden;border-radius:8px;">
      <iframe src="https://www.youtube.com/embed/<%= (stream.url.match(/(?:v=|youtu\.be\/)([A-Za-z0-9_-]{6,})/)||[])[1] %>?autoplay=0" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen style="position:absolute;top:0;left:0;width:100%;height:100%;"></iframe>
    </div>
  <% } else if (stream.kind==='video') { %>
    <video controls src="<%= stream.url %>" class="media"></video>
  <% } else { %>
    <audio controls src="<%= stream.url %>" class="media"></audio>
  <% } %>
</section>