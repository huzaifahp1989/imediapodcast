<section>
  <h2>Live Streams</h2>
  <% if (!streams || streams.length===0) { %>
    <p>No active streams.</p>
  <% } else { %>
    <div class="grid">
      <% streams.forEach(s => { %>
        <div class="card item">
          <div class="title"><%= s.title %></div>
          <div class="sub"><%= s.kind %> â€¢ <%= new Date(s.created_at).toLocaleString() %></div>
          <% if (s.kind==='youtube') { %>
            <div class="media" style="position:relative;padding-bottom:56.25%;height:0;overflow:hidden;border-radius:8px;">
              <iframe src="https://www.youtube.com/embed/<%= (s.url.match(/(?:v=|youtu\.be\/)([A-Za-z0-9_-]{6,})/)||[])[1] %>?autoplay=0" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen style="position:absolute;top:0;left:0;width:100%;height:100%;"></iframe>
            </div>
          <% } else if (s.kind==='video') { %>
            <video controls src="<%= s.url %>" class="media"></video>
          <% } else { %>
            <audio controls src="<%= s.url %>" class="media"></audio>
          <% } %>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>